{
  "name": "rsisp-project",
  "version": "1.0.0",
  "scripts": {
    "build:scss": "node-sass --output-style compressed src/styles/index.scss -o dist/styles/index.css",
    "watch:scss": "onchange -i -v \"./src/styles/index.scss\" -- npm run build:scss",
    "build:js": "eslint --fix ./src/js/*.js && babel src -d dist",
    "watch:js": "onchange -i -v \"./src/js/*.js\" -- eslint --fix ./src/js/*.js",
    "start": "browser-sync -s -f \"./index.html, dist/**/*, src/**/*\"",
    "watch:all": "parallelshell \"npm start\" \"npm run watch:scss\" \"npm run watch:js\""
  },
  "author": "Karol Nowi≈Ñski",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "browser-sync": "^2.26.7",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "node-sass": "^4.13.1",
    "onchange": "^6.1.0",
    "parallelshell": "^3.0.1"
  },
  "dependencies": {},
  "main": ".eslintrc.js",
  "description": ""
}
